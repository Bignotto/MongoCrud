<!DOCTYPE html>
<html lang="en">
    <head>
        <title>My CRUD in NodeJS</title>
    </head>
    <body>
        <h2>Edit Register:</h2>
        <% data.forEach(function(details) { %>
            <form action="/user/edit/<%= details._id %>" method="POST">
                <input type="text" value="<%= details.name %>" name="name">
                <input type="text" value="<%= details.surname %>" name="surname">
                <br />
                <button><a href="/user/show">Todos</a></button>
                <button type="submit">Editar</button>
            </form>
        <% } ) %>
    </body>
</html>